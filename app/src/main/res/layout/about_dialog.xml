<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/_8sdp"
    android:paddingRight="@dimen/_8sdp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_173sdp"
        app:srcCompat="@drawable/about_logos"/>

    <TextView
        android:id="@+id/aboutDocHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_info_24"
        android:drawablePadding="@dimen/_4sdp"
        android:text="@string/aboutDocText1"
        android:textColor="@color/offwhite" />


    <TextView
        android:id="@+id/aboutDocHeader2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="@dimen/_4sdp"
        android:text="@string/aboutDocText2"
        android:textColor="@color/offwhite" />

    <TextView
        android:id="@+id/aboutDocHeader3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_4sdp"
        android:drawableStart="@drawable/github_32_white"
        android:drawablePadding="@dimen/_4sdp"
        android:text="@string/aboutDocText3"
        android:textColor="@color/offwhite" />

    <TextView
        android:id="@+id/aboutDocHeader4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="@string/aboutDocText4"
        android:textColor="@color/offwhite" />


    <Button
        android:id="@+id/aboutDialogButtonOK"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="@string/close"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@color/material_grey"
        android:textColor="@color/offwhite" />

</LinearLayout>


