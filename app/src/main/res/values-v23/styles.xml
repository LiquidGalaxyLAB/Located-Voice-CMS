<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">@color/whiteGrey</item>
        <item name="android:textColorHint">@color/grey_700</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey_700</item>
        <item name="android:textColorTertiary">@color/grey_700</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>

    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/whiteGrey</item>
    </style>
    
    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20%</item>
    </style>
</resources>