<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Main theme colors -->
        <!--<item name="android:windowBackground">@color/whiteGrey</item>-->
        <!--<item name="android:textColorHint">@color/grey_700</item>-->
        <!--<item name="android:textColorPrimary">@color/black</item>-->
        <!--<item name="android:textColorSecondary">@color/grey_700</item>-->
        <!--<item name="android:textColorTertiary">@color/grey_700</item>-->
        <item name="android:screenOrientation">landscape</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:popupBackground">@style/planetpopupBGStyle</item>
    </style>
    <style name="AppTheme.WithActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:screenOrientation">landscape</item>
        <item name="colorPrimary">#363135</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Customize other attributes as needed -->
    </style>


    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>

        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
    <item name="cornerSize">20%</item>
    </style>
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
<!--    SuggPOI-->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_suggpoibottomsheet</item>
    </style>

<!--    Tour-->
    <style name="TourAppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TourAppModalStyle</item>
    </style>

    <style name="TourAppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_tourbottomsheet</item>
    </style>



    <style name="CardForCategories"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_suggpois</item>
    </style>

<!--    Menu Popup-->
    <style name="menupopupBGStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.95</item>
        <item name="android:background">#451339</item>
    </style>

<!--    Change Planet Popup-->
    <style name="planetpopupBGStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.95</item>
        <item name="android:background">#261912</item>
    </style>

<!--    AlertDialog-->
    <style name="BlackTextAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:colorAccent">@android:color/holo_blue_light</item>
    </style>

</resources>
